pipeline {
    agent any

    tools {
        nodejs "node20"
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
        DOCKERHUB_REGISTRY = 'anas129/backend'
        SCANNER_HOME=tool 'sonar-scanner'
        NEXUS_VERSION = 'nexus3'
        NEXUS_PROTOCOL = 'http'
        NEXUS_URL = 'nexus:8081'
        NEXUS_REPOSITORY = 'frontend-nexus-repo'
        NEXUS_CREDENTIAL_ID = 'nexus-user-credentials'
        NEXUS_CREDENTIALS = credentials("${NEXUS_CREDENTIAL_ID}")
    }

    stages {
        stage('git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Anas4444/frontend.git'
            }
        }

        stage('SONARQUBE-ANALYSIS') {
            steps() {
                sh "echo hello from sonar"
            }
        }

        stage('Build Package') {
            steps() {
                sh "npm ci"
                sh "npm run build2"
            }
        }

        stage('Publish to Nexus') {
            steps() {
                sh "echo hello from nexus"
            }
        }

        stage('Build Docker Image') {
            steps() {
                sh "echo Docker Frontend image pushed to dockerhub repository"
                //sh 'docker build -t anas129/frontend .'
            }
        }

        stage('Deploy') {
            steps() {
                sh "echo Frontend deployed"
            }
        }
    }
}