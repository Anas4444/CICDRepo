    def mavenCmd = """
        curl -u ${NEXUS_CREDENTIALS_USR}:${NEXUS_CREDENTIALS_PSW} -O "${NEXUS_URL}${mavenCoordinates}"
    """.stripIndent()

    // Execute the Maven download command
    sh mavenCmd

    // Return the downloaded artifact path
    return "${mavenCoordinates}"
}*/